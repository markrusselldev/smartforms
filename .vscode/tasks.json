{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Fix PHP File",
      "type": "shell",
      "command": "/var/www/html/wp-content/plugins/smartforms/vendor/bin/phpcbf",
      "args": ["${file}", "--standard=WordPress-Core"],
