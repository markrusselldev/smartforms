{
  "apiVersion": 2,
  "name": "smartforms/dropdown",
  "title": "Dropdown",
  "category": "smartforms",
  "icon": "arrow-down-alt2",
  "description": "Select an option",
  "supports": {
    "html": false
  },
  "attributes": {
    "label": {
      "type": "string",
      "default": ""
    },
    "required": {
      "type": "boolean",
      "default": false
    },
    "helpText": {
      "type": "string",
      "default": ""
    },
    "placeholder": {
      "type": "string",
      "default": "Select an option"
    },
    "groupId": {
      "type": "string",
      "default": ""
    },
    "fieldAlignment": {
      "type": "string",
      "default": "left"
    },
    "options": {
      "type": "array",
      "default": [
        { "label": "Option 1", "value": "option-1" },
        { "label": "Option 2", "value": "option-2" }
      ]
    },
    "layout": {
      "type": "string",
      "default": "horizontal"
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "save": null
}
